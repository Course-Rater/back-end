extends layout

block content
    h1=title

    h2=course.title

    hr

    form(method='POST' action='')
        h3 Quality
        p   
            select(name="quality")
                option(value="1") 1
                option(value="2") 2 
                option(value="3") 3
                option(value="4") 4
                option(value="5") 5
        h3 Difficulty
        p   
            select(name="difficulty")
                option(value="1") 1
                option(value="2") 2
                option(value="3") 3
                option(value="4") 4
                option(value="5") 5

        h3 Tags 
    
        div(style='display: inline; padding-right:10px;')
            input.checkbox-input(type='checkbox', name='tags', value="Attendance Required", id="attendance")
            label(for="attendance") Attendance Required  

            input.checkbox-input(type='checkbox', name='tags', value="Easy A", id="easy")
            label(for="easy") Easy A 

            input.checkbox-input(type='checkbox', name='tags', value="Test Heavy", id="test")
            label(for="test") Test Heavy

            input.checkbox-input(type='checkbox', name='tags', value="Amazing Lectures", id="amazing")
            label(for="amazing") Amazing Lectures 

        h3 What did u think of the course?
        p   
            textarea(placeholder='What did you think of the course?' name='comments' required='true' )
        
        h3 Who taught this course?
        p
            input(type='text' name='instructor' required="true")


        p  Choose among them:
            for instructor in course.instructors
                li=instructor.name

        input(type='submit') 
            

    if errors
        ul
        for error in errors
            li!= error.msg
    