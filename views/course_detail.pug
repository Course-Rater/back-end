extends layout

block content
  h1= title 


  p Course Name: #{course.title}
  p School: #{course.school.title}
  p Instructors: 
  each instructor in course.instructors
    li
      a(href=instructor.url) #{instructor.name}
  p Requirements: #{course.requirements}
  hr
  h3 Reviews:
  -if(review != null){ 
  each r in review
    li
      |Quality: #{r.quality} Difficulty: #{r.difficulty}
      -if(r.comments == null){ r.comments = 'None'}
      p Comments: #{r.comments} 
      p Tags:
      each tag in r.tags
        li
          | #{tag}  
      p Likes: #{r.likes} Dislikes: #{r.dislikes}
      p Instructor: #{r.instructor.name}
      hr
  -}